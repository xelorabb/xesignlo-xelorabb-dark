{
  "btn": {
    "primary": {
      "color": { "value": "{color.neutral.lightest}" },
      "background-color": { "value": "{color.neutral.dark}" },
      "border": { "value": "2px solid {color.neutral.lightest}" },
      "hover": {
        "background-color": { "value": "{color.neutral.darker}" }
      }
    },
    "sm": {
      "font": { "value": "'.btn-size-3'" },
      "text-decoration": { "value": "none" },
      "padding": { "value": "calc({spacing}*1) calc({spacing}*2)" },
      "border-radius": { "value": "2px" }
    },
    "md": {
      "font": { "value": "'.btn-size-2'" },
      "text-decoration": { "value": "none" },
      "padding": { "value": "calc({spacing}*2) calc({spacing}*4)" },
      "border-radius": { "value": "4px" }
    },
    "lg": {
      "font": { "value": "'.btn-size-2'" },
      "text-decoration": { "value": "none" },
      "padding": { "value": "calc({spacing}*3) calc({spacing}*6)" },
      "border-radius": { "value": "4px" }
    }
  }
}
