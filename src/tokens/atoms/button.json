{
  "btn": {
    "primary": {
      "color": { "value": "{color.neutral.lightest}" },
      "background-color": { "value": "{color.neutral.dark}" },
      "border": { "value": "calc({spacing}/2) solid {color.neutral.lightest}"},
      "hover": {
        "background-color": { "value": "{color.neutral.darker}" }
      }
    },
    "sm": {
      "font": { "value": "'.btn-size-3'"},
      "text-decoration": { "value": "none" },
      "padding": {
        "top": { "value": "calc({spacing}*1)" },
        "bottom": { "value": "calc({spacing}*1)" },
        "left": { "value": "calc({spacing}*2)" },
        "right": { "value": "calc({spacing}*2)" }
      },
      "border-radius": {
        "top-left": { "value": "calc({spacing}/2)" },
        "top-right": { "value": "calc({spacing}/2)" },
        "bottom-left": { "value": "calc({spacing}/2)" },
        "bottom-right": { "value": "calc({spacing}/2)" }
      }
    },
    "md": {
      "font": { "value": "'.btn-size-2'"},
